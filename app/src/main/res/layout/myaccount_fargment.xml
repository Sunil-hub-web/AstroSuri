<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/twenty">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/twenty_five"
                android:layout_height="@dimen/twenty_five"
                android:src="@drawable/edit"
                android:layout_marginRight="@dimen/ten">


            </ImageView>

            <TextView
                android:layout_toRightOf="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginRight="@dimen/ten"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty">


            </TextView>

        </RelativeLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/hundred_twenty"
            android:layout_height="@dimen/hundred_twenty"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/twenty"
            android:src="@drawable/profileimage"
            app:civ_border_color="@color/astrocolor2"
            app:civ_border_width="@dimen/five"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/thirty">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:layout_marginRight="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:text=":  Sunil Kumar Dash"
                    android:layout_marginRight="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="@dimen/thirty">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:layout_marginRight="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:text=":  Male"
                    android:layout_marginRight="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="@dimen/thirty">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="eMail"
                    android:layout_marginRight="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:text=":  sunil95dash@gmail.com"
                    android:layout_marginRight="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="@dimen/thirty">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="Mobile No."
                    android:layout_marginRight="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:text=":  +91 1234567890"
                    android:layout_marginRight="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize"></TextView>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
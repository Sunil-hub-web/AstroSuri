<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/two_hundred"
        android:layout_height="@dimen/hundred"
        android:src="@drawable/logo2"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginTop="@dimen/ten">

    </ImageView>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="@dimen/twenty"
        android:background="#646667"
        android:layout_below="@+id/image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/view"
        android:layout_marginTop="@dimen/twenty">

        <RelativeLayout
            android:id="@+id/nav_Myaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:src="@drawable/my_account">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Account"
                android:textColor="@color/black"
                android:textSize="@dimen/edittextsize"
                android:layout_toRightOf="@+id/img1"
                android:layout_marginLeft="@dimen/fifteen"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nav_brithDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:src="@drawable/birth_details">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birth Details"
                android:textColor="@color/black"
                android:textSize="@dimen/edittextsize"
                android:layout_toRightOf="@+id/img2"
                android:layout_marginLeft="@dimen/fifteen"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nav_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:src="@drawable/history_nav">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="@color/black"
                android:textSize="@dimen/edittextsize"
                android:layout_toRightOf="@+id/img4"
                android:layout_marginLeft="@dimen/fifteen"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nav_walletHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten">

            <ImageView
                android:id="@+id/img5"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:src="@drawable/wallet">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet History"
                android:textColor="@color/black"
                android:textSize="@dimen/edittextsize"
                android:layout_toRightOf="@+id/img5"
                android:layout_marginLeft="@dimen/fifteen"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nav_Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten">

            <ImageView
                android:id="@+id/img6"
                android:layout_width="@dimen/twenty"
                android:layout_height="@dimen/twenty"
                android:src="@drawable/log_out">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/black"
                android:textSize="@dimen/edittextsize"
                android:layout_toRightOf="@+id/img6"
                android:layout_marginLeft="@dimen/fifteen"/>

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>